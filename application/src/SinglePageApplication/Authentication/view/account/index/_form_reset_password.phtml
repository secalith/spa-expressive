                <div class="form-group">
                    <?php if(null!==$element&&$element->getOption('label')):?>
                        <div class="control-label col-xs-4 col-xs-offset-1">
                            <?php echo $this->formLabel($element); ?>
                            <?php if($element->getOption('label_options')): ?>
                                <?php $elementLabelOptions=$element->getOption('label_options');?>
                                <?php echo (is_array($elementLabelOptions)
                                    &&!empty($elementLabelOptions)
                                    &&isset($elementLabelOptions['required'])
                                    &&$elementLabelOptions['required']!==false)
                                    ?'<span class="color-red">*</span>':null; ?>
                            <?php endif; ?>
                        </div>
                    <?php endif;?>
                    <?php if($element->getAttribute('type')!=='submit'):?>
                    <div class="col-xs-7">
                        <?php echo $this->formElement($element); ?>
