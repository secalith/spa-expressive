    <?php
    $form->prepare();

    ?>
    <div class="alert alert-info flash-messenger">
        <p>Only manual reset works</p>
    </div>
    <?php if(isset($formView,$formView[sprintf('%s_%s_reset_password',$module,$submodule)]['default'])):?>

        <?php foreach($formView[sprintf('%s_%s_reset_password',$module,$submodule)]['default'] as $fieldLocation=>$fieldLabel):?>
            <?php $element = $this->getObjectPathFromString($fieldLocation,$form); ?>
            <?php if($element->getAttribute('type')=='hidden'):?>
                <div class="hidden"><?php echo $this->formElement($element); ?></div>
                <?php echo $this->formElementErrors($element,array('class'=>'form-error')); ?>
                <?php continue; ?>
            <?php endif;?>
