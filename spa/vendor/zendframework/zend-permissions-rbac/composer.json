{
    "name": "zendframework/zend-permissions-rbac",
    "description": "Provides a role-based access control management",
    "license": "BSD-3-Clause",
    "keywords": [
        "zendframework",
        "zend-permssions-rbac",
        "rbac",
        "authorization"
    ],
    "homepage": "https://github.com/zendframework/zend-permissions-rbac",
    "autoload": {
        "psr-4": {
            "Zend\\Permissions\\Rbac\\": "src/"
        }
    },
    "require": {
        "php": "^7.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev",
            "dev-develop": "3.1.x-dev"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Permissions\\Rbac\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0.1",
        "zendframework/zend-coding-standard": "~1.0.0"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
